{
  "training": {
    "template": [
      {
        "role": "user",
        "content": [
          { "type": "text", "text": "{{instruction}}" }
        ]
      },
      {
        "role": "assistant",
        "content": [
          { "type": "text", "text": "{{caption}}" },
          { "type": "function", "name": "find_object", "**args": { "query": "{{instruction}}" } },
          { "type": "function", "name": "count_object", "**args": { "query": "{{instruction}}", "scres": [] } },
          { "type": "function", "name": "object_action_detect", "**args": { "query": "{{instruction}}", "scres": [] } },
          { "type": "function", "name": "transcribe_audio_from_video", "**args": { "query": "{{instruction}}", "scres": [] } },
          { "type": "function", "name": "search_similarity", "**args": { "query": "{{instruction}}", "src": "{{path}}", "top_k": "{{top_k}}" } },
          { "type": "function", "name": "generate_description", "**args": { "query": "{{instruction}}", "src": "{{path}}" } },
          { "type": "function", "name": "generate_multimodal_report", "**args": { "query": "{{instruction}}", "src": "{{path}}" } }
        ]
      }
    ]
  },
  "inference": {
    "template": [
      {
        "role": "user",
        "content": [
          { "type": "text", "text": "{{instruction}}" },
          { "type": "text", "text": "{{caption}}" },
          { "type": "function", "name": "find_object", "**args": { "query": "{{instruction}}" } },
          { "type": "function", "name": "count_object", "**args": { "query": "{{instruction}}", "scres": [] } },
          { "type": "function", "name": "object_action_detect", "**args": { "query": "{{instruction}}", "scres": [] } },
          { "type": "function", "name": "transcribe_audio_from_video", "**args": { "query": "{{instruction}}", "scres": [] } },
          { "type": "function", "name": "search_similarity", "**args": { "query": "{{instruction}}", "src": "{{path}}", "top_k": "{{top_k}}" } },
          { "type": "function", "name": "generate_description", "**args": { "query": "{{instruction}}", "src": "{{path}}" } },
          { "type": "function", "name": "generate_multimodal_report", "**args": { "query": "{{instruction}}", "src": "{{path}}" } }
        ]
      }
    ]
  }
}